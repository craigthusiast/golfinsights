<div class="container">
  <!--<div class="row">-->
  <!--  <div class="col-md-8 img-full-width">-->
  <!--    <p>-->
  <!--      <%#= image_tag @course.image.url(:large), class: "img-responsive" %><br/>-->
  <!--    </p>-->
  <!--  </div>-->
  <!--</div>-->
   
  <div class="row">
    <h2><%= @course.name %></h2>
  </div>
  
  <div class="row">
    <br>
    <p>
      <strong>Par:</strong>
      <%= @course.par %>
    </p>
    
    <p>
      <strong>Yardage:</strong>
      <%= @course.yardage %>
    </p>
    
    <p>
      <strong>Rating:</strong>
      <%= @course.rating %>
    </p>
    
    <p>
      <strong>Slope:</strong>
      <%= @course.slope %>
    </p>
    
    <p>
      <strong>Favourite:</strong>
      <%= @course.favourite %>
    </p>
    
    <p>
      <strong>Tees:</strong>
      <%= @course.tees %>
    </p>
    <br>
  </div>
  
  <div class="row">
    <%= link_to 'Edit', edit_course_path(@course), :class => "btn btn-primary" %>
    <%= link_to 'Delete', @course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
    <%= link_to 'My Courses', courses_path, :class => "btn btn-success" %>
  </div>

  <div class="row", style="padding-bottom: 10px">
    <br/>
    <h2 class="h1-margin">My Rounds at this Course</h2>
    <br/>
  </div>
  
  <div class="row">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Score</th>
            <th>Differential</th>
          </tr>
        </thead>
        <tbody>
          <% @rounds.each do |r| %>
            <tr>
              <td><%= link_to r.date, [@course, r] %></td>
              <td><%= r.score %></td>
              <td><%= r.handicap_differential %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <%= link_to "Add a Round", new_course_round_path(@course), :class => "btn btn-warning" %>
    
  </div>
  
</div>