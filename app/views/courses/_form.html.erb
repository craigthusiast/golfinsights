<div class="panel panel-default">
  <!--<div class="panel-heading"><h2>Sign Up</h2></div>-->
  <div class="panel-body">
    
  <%= form_for(@course) do |f| %>
    <% if @course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
  
        <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :name, class: 'sr-only' %><br>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <%= f.label :par, class: 'sr-only' %><br>
      <%= f.number_field :par, class: 'form-control', placeholder: 'Par' %>
    </div>
    <div class="form-group">
      <%= f.label :yardage, class: 'sr-only' %><br>
      <%= f.number_field :yardage, class: 'form-control', placeholder: 'Yardage' %>
    </div>
    <div class="form-group">
      <%= f.label :rating, class: 'sr-only' %><br>
      <%= f.number_field :rating, :step => 0.1, class: 'form-control', placeholder: 'Rating' %>
    </div>
    <div class="form-group">
      <%= f.label :slope, class: 'sr-only' %><br>
      <%= f.number_field :slope, class: 'form-control', placeholder: 'Slope' %>
    </div>
    <div class="form-group">
      <%= f.label :favourite %><br>
      <%= f.check_box :favourite, class: 'form-horizontal' %>
    </div>
    <div class="form-group">
      <%= f.label :tees %><br>
      <%#= f.text_field :tees %>
      <%= f.select :tees, ["Black", "Gold", "Blue", "White", "Red", "Other"], class: 'form-horizontal' %>
    </div>
    <div class="actions">
      <%= f.submit "Save Course", class: 'btn btn-warning' %>
    </div>
  
  <% end %>
  
  </div>
  
</div>