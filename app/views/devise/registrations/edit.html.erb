<div class="panel panel-default">
  <div class="panel-heading"><h2>Change my <%= resource_name.to_s.humanize %> information</h2></div>
  <div class="panel-body">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="form-group">
    <%= f.label :first_name %> <i></i><br />
    <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :last_name %> <i></i><br />
      <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :email %> <i>(change your login email address, if you wish)</i><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :current_password %> <i>(confirm your existing password to complete any changes above)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
    </div>
  
    <div class="actions">
      <%= f.submit "Update", class:"btn btn-primary" %>
    </div>
    
  </div>
  
  <div class="panel-footer"></div>
  <!--<div class="panel-footer"><%= render "devise/shared/links" %></div>-->
  
</div>

<div class="panel panel-default">
  <div class="panel-heading"><h3>Change my password</h3></div>
  <div class="panel-body">

    <div class="form-group">
      <%= f.label :password %> <i>(enter new password)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation %> <i>(confirm your new password)</i><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

  </div>
  
  <div class="panel-footer"></div>

</div>

<div class="panel panel-default">
  <div class="panel-heading"><h3>Cancel my account</h3></div>
  <div class="panel-body">
    
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default' %></p>
  
    <%= button_to "Keep my account, and take me back to the fun", :back, class: 'btn btn-success' %>
    
  </div>
  
  <div class="panel-footer"></div>

</div>
    
<% end %>
